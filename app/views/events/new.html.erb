<div class="row" style="padding: 50px;">
	<div class="col-md-12">
		<div class="card card-login col-md-6 offset-md-3">
			<div class="card-header">
				New event
			</div>

			<div class="card-body">
				<%= form_tag '/new/event' do %>
				<div class="form-group">
					<label for="title">Event title</label>
					<%= text_field_tag :title, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<%= text_field_tag :location, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<label for="start_date">Start Date</label>
					<%= date_field_tag(:start_date, nil, class: 'form-control') %>
				</div>
				<div class="form-group">
					<label for="end_date">End Date</label>

					<%= date_field_tag(:end_date, nil, class: 'form-control') %>
				</div>
				<%= submit_tag 'Register', class: 'btn btn-primary btn-block' %>
			<% end %>
		</div>
	</div>
</div>
</div>
